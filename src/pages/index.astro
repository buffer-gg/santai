---
import Layout from "../layouts/Layout.astro";
import SearchBar from "../components/navigation/SearchBar.svelte";
import Card from "../components/Card.astro";

import SiteInformation from "../information/SiteInformation.json";
import BackgroundImage from "../components/cosmetic/BackgroundImage.astro";
---

<Layout pageTitle="Santai.gg | Spectre Divide Leaderboard" hiddenNavbar hiddenFooter>
  <main>
    <BackgroundImage imagePath="/src/assets/background-00.png" altText="Spectre Divide - spectators cheering." />

    <div class="flex h-[90lvh] mx-large">
      <div class="flex flex-col w-full max-w-screen-sm m-auto gap-large">
        <!-- Logo -->
        <span class="mx-auto select-none text-4xl tracking-wider font-planetkosmos text-light-0">santai<span class="text-xl">.</span>gg</span>
        
        <!-- Leaderbord Button & Searchbar -->
        <div class="flex flex-row w-full gap-base">
          <Card href="/leaderboard" class="h-full py-0 px-base md:px-large rounded-tl-base -skew-x-30 hover:-translate-x-1">
              <svg class="w-9 skew-x-30 stroke-light-0 group-hover/card:stroke-light-2 duration-quick" stroke-width="0.75" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M15 19H9V12.5V8.6C9 8.26863 9.26863 8 9.6 8H14.4C14.7314 8 15 8.26863 15 8.6V14.5V19Z" stroke-width="0.75" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="M20.4 19H15V15.1C15 14.7686 15.2686 14.5 15.6 14.5H20.4C20.7314 14.5 21 14.7686 21 15.1V18.4C21 18.7314 20.7314 19 20.4 19Z" stroke-width="0.75" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="M9 19V13.1C9 12.7686 8.73137 12.5 8.4 12.5H3.6C3.26863 12.5 3 12.7686 3 13.1V18.4C3 18.7314 3.26863 19 3.6 19H9Z" stroke-width="0.75" stroke-linecap="round" stroke-linejoin="round"></path>
              </svg>
          </Card>
          <SearchBar className="my-auto rounded-tl-large" />
        </div>

        <!-- Affiliate Notice -->
        <div class="mx-auto mt-large max-w-96 text-xs text-light-0 brightness-50">
          {SiteInformation.affiliateNotice}
        </div>
      </div>
    </div>
  </main>
</Layout>
