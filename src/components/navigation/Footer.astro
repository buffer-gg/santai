---
import aboutSantaiGG from "../../data/about-santaigg.json";
import DeveloperCredits from "../information/DeveloperCredits.astro";

interface Props {
  hidden?: boolean;
}

const { hidden = false } = Astro.props;
---

{
    !hidden &&
    <footer class="w-full mt-auto p-large outline outline-4 outline-offset-4 outline-accent text-center bg-accent text-xs text-dark-0 font-semibold md:text-sm">
