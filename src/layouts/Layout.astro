---
import "../styles/global.css";
import siteInformation from "../information/SiteInformation.json";
import { ViewTransitions } from "astro:transitions";
import Navbar from "../components/navigation/Navbar.astro";
import Footer from "../components/navigation/Footer.astro";
import { cn } from "../utils/cn";

interface Props {
  class?: string;
  style?: string;
  pageTitle: string;
  pageDescription?: string;
  hiddenNavbar?: boolean;
  hiddenFooter?: boolean;
}

const { class: className, style, pageTitle, hiddenNavbar = false, hiddenFooter = false, pageDescription = siteInformation.siteDescription } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={pageDescription} />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#14181f" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <ViewTransitions />
  </head>
  <body class={cn("bg-dark-0", className)} style={style}>
    <Navbar hidden={hiddenNavbar} />
    <slot />
    <Footer hidden={hiddenFooter} />
  </body>
</html>
